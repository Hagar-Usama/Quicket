<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Quicket" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>

    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body>
    <!-- Flash notifications -->
    <div id="flash-notifications"></div>

    <!-- Styled Flash Notifications -->
    <% flash.each do |key, message| %>
      <div class="flash-message <%= key %>">
        <i class="fa fa-info-circle"></i> <%= message %>
        <span class="close-btn" onclick="this.parentElement.style.display='none';">&times;</span>
      </div>
    <% end %>

    <%= yield %> 

    <!-- User signed-in links -->
    <ul>
      <% if user_signed_in? %>
        <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
        <%= button_to "Sign Out", destroy_user_session_path, method: :delete %>
        
        <!-- Common link for both admin and regular users -->
        <h1>Tickets</h1>
        <li><%= link_to 'My Tickets', tickets_path %></li>

        <!-- Display a notification about the user's role -->
        <% if flash[:role_notice] %>
          <p class="notice"><%= flash[:role_notice] %></p>
        <% end %>
      <% else %>
        <li><%= link_to 'Login', new_user_session_path %></li>
        <li><%= link_to 'Sign Up', new_user_registration_path %></li>
      <% end %>
    </ul>

  </body>
</html>
